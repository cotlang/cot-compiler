// Test calling parserIsAtEnd with a local Module variable in the same function
import "../src/token"
import "../src/lexer"
import "../src/ast"
import "../src/parser"

fn wrapperWithLocal(p: *Parser) bool {
    println("Creating local module...")
    var mod = newModule()
    println("Module created, calling parserIsAtEnd...")
    const result = parserIsAtEnd(p)
    println("parserIsAtEnd returned: " + string(result as i64))
    return result
}

fn main() i64 {
    println("Creating parser...")

    const source = "fn main() { }"
    var p = newParser(source)
    println("Parser created")

    println("Calling wrapper...")
    const at_end = wrapperWithLocal(&p)
    println("Wrapper returned: " + string(at_end as i64))

    println("Done!")
    return 0
}
