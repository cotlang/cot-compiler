// Test pointer-based struct modification
struct Counter {
    value: i64,
}

fn increment(c: *Counter) {
    c.value = c.value + 1
}

fn main() i64 {
    var counter = Counter{ .value = 0 }
    println("Initial: " + string(counter.value))

    increment(&counter)
    println("After 1st increment: " + string(counter.value))

    increment(&counter)
    println("After 2nd increment: " + string(counter.value))

    increment(&counter)
    println("After 3rd increment: " + string(counter.value))

    return counter.value
}
